<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ChibaPlayer" parent="android:Theme.Material.Light.NoActionBar" />
    <!-- Composant pour les chaines  -->
    <style name="ChannelsTextstyle">
        <item name="android:textColor">#4D4B4B</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/unigeoregular</item>
    </style>

    <!-- Composant par default pour les titres  -->
    <style name="DefaultTextstyle">
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/unigeomedium</item>
    </style>
    <!-- Composant par default pour les buttons  -->

    <style name="RoundedButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/unigeoregular</item>
    </style>


    <!-- Composant par default pour les buttons de l'interface utilisateur -->
    <style name="TriangleButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/unigeoregular</item>
    </style>

    <style name="TriangleUpButtonStyle" parent="TriangleButtonStyle">
        <item name="android:background">@drawable/triangle_up</item>
    </style>

</resources>